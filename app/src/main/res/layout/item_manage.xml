<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="8dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemLayout_m"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <ImageView
        android:id="@+id/iv_pImg_m"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_img_placeholder"
        />

    <TextView
        android:id="@+id/tv_pName_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_pImg_m"
        android:text="@string/pName"
        android:textSize="20sp"
        />

        <TextView
            android:id="@+id/tv_pRealName_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pName_m"
            android:layout_toEndOf="@+id/iv_pImg_m"
            android:text="@string/pRealName"
            android:textSize="20sp"
            />
    <TextView
        android:id="@+id/tvEnrollDate_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pRealName_m"
        android:layout_alignStart="@+id/tv_pName_m"
        android:text="@string/_2000_00_00"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tvWaterDate_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pImg_m"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/btnCalendar_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWaterDate_m"
        android:text="@string/calendar"
        />

    <Button
        android:id="@+id/btnMinus_m"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text = "@string/minus"
        android:layout_toEndOf="@+id/btnCalendar_m"
        android:layout_alignBaseline="@+id/btnCalendar_m"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/tvWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cntWater"
        android:layout_toEndOf="@+id/btnMinus_m"
        android:layout_alignBaseline="@+id/btnCalendar_m"
        android:textSize="20sp"
        />
        <TextView
            android:id="@+id/tvWaterCnt_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvWater"
            android:layout_toEndOf="@+id/tvWater"
            android:textSize="20sp"
            android:text = "@string/zero"
            />
    <Button
        android:id="@+id/btnPlus_m"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="@string/plus"
        android:layout_toEndOf="@+id/tvWaterCnt_m"
        android:layout_alignBaseline="@+id/btnCalendar_m"
        />

        <Button
            android:id="@+id/btnSetWater_m"
            android:layout_width="104dp"
            android:layout_height="wrap_content"

            android:text="@string/alarmOff"
            android:layout_below="@+id/btnCalendar_m"
            />

        <Button
            android:id="@+id/btnTip_m"
            android:layout_width="104dp"
            android:layout_height="wrap_content"

            android:text="@string/tipPlant"
            android:layout_toEndOf="@+id/btnSetWater_m"
            android:layout_alignBaseline="@id/btnSetWater_m"
            />

        <Button
            android:id="@+id/btnDelete_m"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_alignBaseline="@id/btnSetWater_m"
            android:layout_toEndOf="@+id/btnTip_m"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
