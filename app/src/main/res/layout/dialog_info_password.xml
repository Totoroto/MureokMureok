<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/explain_changePassword"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="비밀번호를 변경합니다"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorGray"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/explain_currentPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 비밀번호 :"
        android:layout_below="@+id/explain_changePassword"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />
    <EditText
        android:id="@+id/etCurrentPW_dialogPW"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/explain_currentPW"
        android:layout_alignBaseline="@+id/explain_currentPW"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/explain_changePW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바꿀 비밀번호 :"
        android:layout_alignEnd="@+id/explain_currentPW"
        android:layout_below="@+id/etCurrentPW_dialogPW"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />
    <EditText
        android:id="@+id/etChangePW_dialogPW"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/explain_changePW"
        android:layout_alignBaseline="@+id/explain_changePW"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/explain_confirmPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인 :"
        android:layout_alignEnd="@+id/explain_currentPW"
        android:layout_below="@+id/etChangePW_dialogPW"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />
    <EditText
        android:id="@+id/etConfirmPW_dialogPW"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/explain_confirmPW"
        android:layout_alignBaseline="@+id/explain_confirmPW"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/btnCancel_dialogPW"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@+id/explain_confirmPW"
        android:layout_marginTop="28dp"
        />
    <Button
        android:id="@+id/btnOK_dialogPW"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_toEndOf="@+id/btnCancel_dialogPW"
        android:layout_alignBaseline="@+id/btnCancel_dialogPW"
        />
</RelativeLayout>
