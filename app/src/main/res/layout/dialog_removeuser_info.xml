<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/explain_UserRemove"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="회원 탈퇴를 하시겠습니까?"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorGray"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/explain_UserRemove2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한번 탈퇴하시면 복구가 불가능합니다"
        android:layout_below="@+id/explain_UserRemove"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/explain_UserRemove3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴 하시려면 비밀번호를 입력해주세요"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/explain_UserRemove2"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/etPW_removeDialog"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/explain_UserRemove3"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnCancel_removeDialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@+id/etPW_removeDialog"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/btnOK_removeDialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_toEndOf="@+id/btnCancel_removeDialog"
        android:layout_alignBaseline="@+id/btnCancel_removeDialog"
        />
</RelativeLayout>
