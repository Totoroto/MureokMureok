<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content">

    <DatePicker
        android:id="@+id/datePicker_list_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        />

    <Button
        android:id="@+id/btnCancel_list_filter"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker_list_filter"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/cancel" />
    <Button
        android:id="@+id/btnOK_list_filter"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancel_list_filter"
        android:layout_toEndOf="@+id/btnCancel_list_filter"
        android:text="@string/ok"
        android:backgroundTint="@color/colorPrimary"
        />

</RelativeLayout>
