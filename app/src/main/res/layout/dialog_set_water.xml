<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvExplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:text="@string/timeWater"
        android:layout_alignStart="@+id/timePicker"
        />
    <Button
        android:id="@+id/btnCancel_water"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvExplain"
        android:text="@string/cancel" />
    <Button
        android:id="@+id/btnOK_water"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancel_water"
        android:layout_toEndOf="@+id/btnCancel_water"
        android:text="@string/ok" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner"
        android:layout_below="@+id/etWaterDate"
        />


</RelativeLayout>
