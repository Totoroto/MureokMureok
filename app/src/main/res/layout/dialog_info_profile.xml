<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvExplain_infoProfile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="프로필을 변경합니다"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorGray"
        android:gravity="center"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civPofile_infoDialog"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvExplain_infoProfile"
        app:civ_border_width = "1dp"
        app:civ_border_color="@color/colorGray"
        />

    <EditText
        android:id="@+id/et_infoDialog"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civPofile_infoDialog"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btnCancel_infoDialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@+id/et_infoDialog"
        />
    <Button
        android:id="@+id/btnOK_infoDialog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_toEndOf="@+id/btnCancel_infoDialog"
        android:layout_alignBaseline="@+id/btnCancel_infoDialog"
        />
</RelativeLayout>
