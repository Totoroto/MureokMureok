<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/userInfoLayout"
        android:background="@color/colorAccent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civUserProfile_community"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorGray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNickName_community"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/civUserProfile_community"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate_community"
            android:text="@string/_2017_01_01"
            android:layout_alignStart="@+id/tvNickName_community"
            android:layout_alignBottom="@+id/civUserProfile_community"
            android:layout_below="@+id/tvNickName_community"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/communityItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >
    <ImageView
        android:id="@+id/ivPicture_community"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorGray"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tvContents_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPicture_community"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        />
        <TextView
            android:id="@+id/tvExplainNumLike_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/like"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/tvContents_community"
            />
        <TextView
            android:id="@+id/tvNumLike_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvExplainNumLike_community"
            android:layout_marginStart="8dp"
            android:text="@string/zero"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/tvExplainNumLike_community"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/tvContents_community"
            />
    <Button
        android:id="@+id/btnLike_community"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/selector_btn_like"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/tvNumLike_community"
        />

    <Button
        android:id="@+id/exBtnComment_community"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_comment"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/btnLike_community"
        android:layout_alignBottom="@+id/btnLike_community"
        />

    <Button
        android:id="@+id/btnShare_community"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_share"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/exBtnComment_community"
        android:layout_alignBottom="@+id/btnLike_community"
        />
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/exLayoutComment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/tvNumLike_community"
            android:background="@android:color/white"
            app:el_duration="1000"
            app:el_expanded="false"
            app:el_parallax="0.5"
            >

            <Button
                android:id="@+id/btnSend_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/etComment"
                android:layout_toEndOf="@+id/etComment"
                android:layout_alignEnd="@+id/btnClose_comment"
                android:text="@string/send"
                android:backgroundTint="@color/colorPriMedium"
                android:layout_gravity="bottom|end"
                />

            <Button
                android:id="@+id/btnClose_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/colorPriMedium"
                android:text="@string/close" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="48dp"/>

            <EditText
                android:id="@+id/etComment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="2dp" />
        </net.cachapa.expandablelayout.ExpandableLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/commentLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView_community"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPriMedium"
        >
        <include
            android:id="@+id/previewComment"
            layout="@layout/item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/commentLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentLayout1"
       android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_centerHorizontal="true"
        android:background="@color/colorPriMedium"
        >
        <include
            android:id="@+id/previewComment2"
            layout="@layout/item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>
